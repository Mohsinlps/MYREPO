@*---------------------------Course Add Modal--------------------------*@



<div class="modal   courseAddModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Course </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="">
           
         <div class="row addCategoryDiv">
    <div class="col-md-12">
        <form asp-action="AddCourse" id="form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
               <label  class="control-label" id="lblSelect">Select Category to save Course</label>
               <select asp-for="CourseCategoryId" id="coursecategoryid" >
                   <option>Select Course Category</option>
               </select>
              @*  <span asp-validation-for="CourseCategoryId" class="text-danger"></span>*@
            </div>
            
        
            <div class="form-group">
                <label hidden id="lblAddedMessage">Added Successfully !!!</label>
                @*<label asp-for="CourseName" class="control-label"></label>*@
                <input asp-for="CourseName"  id="txtCourse" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <input id="btnclick" type="submit" value="Add Course" class="btn btn-primary"  />
            </div>
        </form>
    </div>
</div>

 
      </div>
  
    </div>
  </div>
</div>




@*---------------------------Course Edit Modal--------------------------*@
<div class="modal   courseEditModal" tabindex="-1">
