      <div class="modal-header">
        <h5 class="modal-title">Update Course </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="display:flex">
           <input type="hidden" id="txtmodalCourseId" class="form-control 	" />
            <input type="hidden" id="txtmodalCourseCategory" class="form-control " />
          <label id="lblCourseName">Course Name</label>
      <input type="text" id="txtmodalCourse" class="form-control" />

      <label hidden id="lblMessage">Updated Successfully !!!</label>

      <label id="lblCourse">Course Category</label>
       <select asp-for="CourseCategoryId" id="drpModalUpdate" >
                  
               </select>
      </div>
      <div class="modal-footer">
       
        <button type="button" class="btn btn-primary btnSaveCourse">Save changes</button>
      </div>
    </div>
  </div>
</div>



